<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>VR01_FillDescriptionDetailsIfOthersSelec</fullName>
        <active>true</active>
        <description>it is mandatory to fill &quot;Description details&quot; field if &quot;others&quot; is selected.</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
AND(Others__c ),
ISBLANK(Description_Details__c ) 
)</errorConditionFormula>
        <errorMessage>Please, fill the Description Details field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR02_MandatoryCountryRegionIfReachStatus</fullName>
        <active>true</active>
        <description>it is mandatory to fill  &quot;Country/region&quot; field if &quot;Reach satuts&quot; picklist value is selected in the &quot;reach field&quot;</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
INCLUDES( REACH__c , &apos;REACH Status&apos;),
ISBLANK(Country_Region__c ) 
)</errorConditionFormula>
        <errorMessage>Please, fill the Country/Region field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR03_MandatoryReachDetailsHSE</fullName>
        <active>true</active>
        <description>it is mandatory to fill  &quot;Reach details&quot; field if &quot;Other Reach questions &quot; picklist value is selected in the &quot;reach field&quot;</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
INCLUDES( REACH__c , &apos;Other REACH questions&apos;),
ISBLANK(ReachDetails__c)
)</errorConditionFormula>
        <errorMessage>Please, fill the Reach Details field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR04_MandatoryInvertoryListHSE</fullName>
        <active>true</active>
        <description>it is mandatory to fill &quot;Inventory list&quot; field if &quot;International inventories is checked&quot;</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
AND(InternationalInventories__c),
ISBLANK(Inventory_list__c)
)</errorConditionFormula>
        <errorMessage>Please, fill the Inventory List field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR05_MandatoryIDofCustomer</fullName>
        <active>true</active>
        <description>It is mandatory to fill &quot;Id of customer&quot; field if &quot;IMDS&quot; picklist value is selected in the &quot;Automotive sector field&quot;</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
INCLUDES( AutomotiveSector__c  , &apos;IMDS&apos;),  
				ISBLANK( IDCustomer__c)
)</errorConditionFormula>
        <errorMessage>Please, fill the ID Customer field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR06_MandatoryProductCompositionDetails</fullName>
        <active>true</active>
        <description>It is mandatory to fill &quot;product composition details&quot; field if &quot;other&quot; picklist value is selected in the &quot;Product composition&quot; field .</description>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
INCLUDES( ProductComposition__c , &apos;Other&apos;),
ISBLANK(Product_composition_details__c)
)</errorConditionFormula>
        <errorMessage>Please, fill the Product Composition Details field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>VR07_MandatoryFinalAnswer</fullName>
        <active>true</active>
        <errorConditionFormula>AND(
$User.Skip_Validation__c == False,
ISPICKVAL(Status, &quot;Closure&quot;),   
LEN(Final_Answer__c) = 0
)</errorConditionFormula>
        <errorMessage>Please, add a value for &apos;Final answer&apos; before closing the case.</errorMessage>
    </validationRules>
</CustomObject>
